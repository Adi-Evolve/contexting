# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/memoryforge

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Storage Limits (bytes)
FREE_TIER_LIMIT=1000
STARTER_TIER_LIMIT=50000
PRO_TIER_LIMIT=500000

# CORS
CORS_ORIGIN=chrome-extension://*,http://localhost:*

# Compression
COMPRESSION_ENABLED=true
COMPRESSION_THRESHOLD=10000

# Features
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_COMPRESSION_STATS=true
ENABLE_CAUSALITY_TRACKING=true
ENABLE_TEMPORAL_ANALYSIS=true

{
  "manifest_version": 3,
  "name": "Remember - AI Memory",
  "version": "2.0.0",
  "description": "Persistent memory for ChatGPT and Claude. Never forget your conversations.",
  
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "notifications"
  ],
  
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*"
  ],
  
  "background": {
    "service_worker": "background-v2.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "error-handler.js",
        "storage-manager.js",
        "tool-usage-tracker.js",
        "code-language-detector.js",
        "conversation-threader.js",
        "context-extractor.js",
        "context-extractor-v2.js",
        "conversation-tracker.js",
        "content-chatgpt-v2.js"
      ],
      "css": ["styles-v2.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://claude.ai/*"],
      "js": [
        "error-handler.js",
        "storage-manager.js",
        "tool-usage-tracker.js",
        "code-language-detector.js",
        "conversation-threader.js",
        "context-extractor.js",
        "context-extractor-v2.js",
        "conversation-tracker.js",
        "content-claude.js"
      ],
      "css": ["styles-v2.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup-v3.html"
  },
  
  "commands": {
    "capture-conversation": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Capture current conversation"
    },
    "open-sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Open conversation sidebar"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "icon128.png"],
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*", "https://claude.ai/*"]
    }
  ]
}
